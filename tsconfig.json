{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "rootDir": "bin",
    "outDir": "dist",
  },
  "exclude": [
    "node_modules", "public", "src"
  ],
  "include": [
    "bin"
  ]
}
